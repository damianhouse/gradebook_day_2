<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Login</h1>
<p>Please login below.</p>

<%= form_tag(login_path) do %>

  <p><%= label_tag :email %>
  <%= email_field_tag :email %></p>

  <p><%= label_tag :password %>
  <%= password_field_tag :password %></p>
  <%= radio_button_tag(:radio_selection, "Teacher", true) %>
  <%= label_tag(:radio_selection, "Teacher") %>
  <%= radio_button_tag(:radio_selection, "Student") %>
  <%= label_tag(:radio_selection, "Student") %>
  <%= radio_button_tag(:radio_selection, "Parent") %>
  <%= label_tag(:radio_selection, "Parent") %><br>
  <%= submit_tag "Log in" %>
<% end %>
